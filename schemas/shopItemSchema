const mongoose = require('mongoose');

const shopItemSchema = new mongoose.Schema({
  name: {
    type: String,
    required: true
},
  description: {
    type: String,
    required: true
},
  price: {
    type: Number,
    required: true
},
  isInStock: {
    type: Boolean,
    default: false
}
}, {timestamps:true});

module.exports = mongoose.model('ShopItem', shopItemSchema);